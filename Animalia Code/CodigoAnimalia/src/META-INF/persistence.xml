<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="AnimaliaJPA" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>Negocio.DepartamentoJPA.Departamento</class>
		<class>Negocio.ProductoJPA.Producto</class>
		<class>Negocio.ProductoJPA.Alimentacion</class>
		<class>Negocio.ProductoJPA.Merchadising</class>
		<class>Negocio.TrabajadorJPA.Trabajador</class>
		<class>Negocio.TrabajadorJPA.TrabajadorCompleto</class>
		<class>Negocio.TrabajadorJPA.TrabajadorParcial</class>
		<class>Negocio.MarcaProductoJPA.MarcaProducto</class>
		<class>Negocio.ProveedorJPA.Proveedor</class>
		<class>Negocio.VentaJPA.LineaVenta</class>
		<class>Negocio.VentaJPA.LineaVentaID</class>
		<class>Negocio.VentaJPA.Venta</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/animaliadb?useSSL=false&amp;serverTimezone=UTC"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
			<property name="javax.persistence.jdbc.password" value=""/>
		</properties>
	</persistence-unit>
</persistence>
